---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

const posts = (await getCollection('blog'));
---

<!doctype html>
<html lang="en">
    <head>
        <style>
             .listcontainer {
                margin-top: 24px;
                display: grid;
                gap: 24px;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
				margin-inline: auto;
                max-width: 1280px;
                width: auto;
            }

            .listItem {
                width: 100%;
                /* min-width: 240px; */
                border-radius: 8px; 
                border: 2px solid rgb(190, 190, 190);
                box-shadow: 0 2px 6px rgba(96, 115, 159, 25%), 0 8px 24px rgba(96, 115, 159, 33%), 0 16px 32px rgba(96, 115, 159, 33%);
            } 

			a {
				text-decoration: none;
			}
        </style>
    </head>
	<BaseHead title={SITE_TITLE}/>
	<Header/>
	<body>
        <div class="listcontainer">
		{
			posts.map((post) => (
               
                    <div class="listItem">
					<img width="100%" height="280px" src={post.data.heroImage}/>
                    <div style="padding: 12px;">
                    <a class="recipelink" href={`/blog/${post.slug}/`}>
					    <h4>{post.data.title}</h4>
					</a> 
                    </div>
                    </div>
			))
        }
        </div>
	</body>
</html>
